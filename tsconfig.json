{
  "compilerOptions": {
    "types": ["node"],
    "target": "es3",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist", "**/*.d.ts"],
  "include": ["*.ts"]
}
